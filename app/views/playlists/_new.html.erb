<turbo-frame id="new_playlist">
  <div>
    <div class="mb-3">
      <h1 class="font-bold text-center">フォルダを作成</h1>
    </div>
    <%= form_with(model: @playlist, url: playlists_path, local: true, scope: :playlist) do |form| %>
      <%= render 'shared/error_messages', object: form.object %> 
      <div class="flex flex-col">
        <%= form.text_field :title, class: "rounded-md" %>
        <%= form.submit "保存する", class: "border-t mt-3 p-2 text-blue-500 hover:bg-gray-200 hover:text-blue-700 cursor-pointer" %>
      </div>
    <% end %>
    <button id="modal-close-button" class="font-bold text-4xl rounded absolute -top-2 -right-1"><i class="fa-solid fa-circle-xmark" style="color: #d91717;"></i></i></button>
  </div>
</turbo-frame>
