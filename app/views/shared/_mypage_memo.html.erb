<%= form_tag mypage_memo_path, method: :get, class: "mb-4" do %>
  <%= select_tag :game_id, options_for_select(Game.pluck(:title, :id), session[:game_id]), prompt: 'Select Game' %>
  <%= select_tag :order, options_for_select({ "Newest First" => "newest", "Oldest First" => "oldest" }, session[:selected_sort]), prompt: 'Sort By' %>
  <%= submit_tag 'Filter' %>
<% end %>
<% @memos.each do |memo| %>
  <turbo-frame id="memo_update_<%= memo.id %>">
    <%= render 'shared/mypage_memo_index', memo: memo %>
  </turbo-frame>
<% end %>
<%= paginate @memos %>