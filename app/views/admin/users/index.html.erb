<div class="container mx-auto md:w-4/6 mt-4">
  <%= form_tag admin_root_path, method: :get, class: "m-4" do %>
    <%= text_field_tag :email, params[:email], placeholder: "Emailで検索", class: "rounded-lg py-2 pl-4 pr-10 focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>

    <%= select_tag :role, options_for_select(User.roles.keys, params[:role]), prompt: "権限", class: "rounded-lg mt-2 py-2 pl-4 pr-10 focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>

    <%= button_tag type: :submit do %>
      <i class="fas fa-magnifying-glass pl-1"></i>
    <% end %>
  <% end %>
  <div>
    <div class="hidden md:grid grid-cols-3 px-4">
      <div>Email</div>
      <div>Role</div>
      <div>Actions</div>
    </div>
    <%= render @users %>
    <div class="py-7 text-center text-[20px]">
      <%= paginate @users %>
    </div>  
  </div>  
</div>


