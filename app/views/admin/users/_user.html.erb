<%= turbo_frame_tag user do %>
  <div class="grid grid-cols-1 p-4 mx-3 md:grid-cols-3 border rounded bg-[#f7f9fa] items-center">
    <div><%= user.email %></div>
    <div><%= user.role %></div>
    <div>
      <%= link_to '詳細', admin_user_path(user), data: { turbo: "false" } %> |
      <%= link_to '削除', admin_user_path(user), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%>
    </div>
  </div>
<% end %>
