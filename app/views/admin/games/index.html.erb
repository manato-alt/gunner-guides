<div class="w-4/6 mx-auto mt-4">
  <%= form_tag admin_games_path, method: :get, class: "mb-4" do %>
    <%= text_field_tag :title, params[:title], placeholder: "ゲーム名で検索", class: "rounded-lg py-2 pl-4 pr-10 focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    <%= button_tag type: :submit do %>
      <i class="fas fa-magnifying-glass pl-1"></i>
    <% end %>
  <% end %>
  <div>
    <div class="grid grid-cols-3 px-4">
      <div>logo</div>
      <div>title</div>
      <div>Actions</div>
    </div>
    <%= render @games %>
    <div class="mt-4 mb-10 text-center text-[20px]">
      <%= paginate @games %>
    </div>  
  </div>
</div>
