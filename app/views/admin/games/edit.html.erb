<div class="w-3/6 mx-auto mt-4 text-3xl">
  <div class="text-center my-3">
    <h1 class="text-3xl">ゲーム編集</h1>
  </div>
  <%= form_with(model: @game, url: admin_game_path(@game), local: true) do |form| %>
    <% if @game.errors.any? %>
      <ul>
        <% @game.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="border-4 text-center">
      <div class="border-b-2">
        <p>ゲームロゴ</p>
      </div>
      <div class="py-3">
        <div class="flex justify-center">
          <%= image_tag @game.logo_url, class: "h-24 w-24 object-contain" %>
        </div>
        <div class="mt-3">
          <%= form.text_field :logo_url %>
        </div>
      </div>
      <div class="border-y-2">
        <p>ゲームタイトル</p>
      </div>
      <div class="py-3">
        <%= form.text_field :title, class: "font-bold mb-2" %>
      </div>
      <div class="border-y-2">
        <p>ゲーム概要</p>
      </div>
      <div class="py-3">
        <%= form.text_area :description, rows: 4, class: "text-sm w-3/5 p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
    <div class="text-center mt-3">
      <%= form.submit "更新", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md cursor-pointer" %>
    </div>
  <% end %>
</div>