<div class="w-3/6 mx-auto mt-4 sm:text-3xl">
  <div class="text-center my-3">
    <h1 class="text-2xl sm:text-3xl">動画情報編集</h1>
  </div>
  <%= form_with(model: @video, url: admin_video_path(@video), local: true) do |form| %>
    <% if @video.errors.any? %>
      <ul>
        <% @video.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="border-4 text-center">
      <div class="border-b-2">
        <p>サムネイル</p>
      </div>
      <div class="py-3">
        <div class="flex justify-center">
          <%= image_tag @video.thumbnail_url, class: "h-24 w-24 object-contain mr-4" %>
        </div>
        <div>
          <%= form.text_field :thumbnail_url, class: "w-3/5 p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>
      <div class="border-y-2">
        <p>動画タイトル</p>
      </div>
      <div class="py-3">
        <%= form.text_field :title, class: "w-3/5 p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
    <div class="text-center mt-3">
      <%= form.submit "更新", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md cursor-pointer" %>
    </div>
  <% end %>
</div>