<h2><%= @video.title %></h2>

<%= @video.embed_code.html_safe %>

<% if current_user %>
  <div>
    <%= link_to 'ホーム', home_path(@uservideo), remote: true, class: 'text-blue-500 hover:underline' %>
    <%= link_to 'メモ', memo_section_path(@uservideo), remote: true, class: 'text-blue-500 hover:underline'  %>
  </div>
  <turbo-frame id="section">
    <%= render 'shared/watched_status' %>
  </turbo-frame>
<% else %>
  <div class="flex">
    <p class= 'text-blue-500 hover:underline'>ホーム</p>
    <p class= 'text-blue-500 hover:underline'>メモ</p>
  </div>
  <p>ログイン後利用可能</p>
<% end %>