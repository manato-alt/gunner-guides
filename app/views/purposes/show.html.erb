<div class="m-6 min-h-[calc(100vh-10rem)]">
  <div>
    <div class="flex justify-center items-center">
      <div class="w-full md:w-2/3 lg:w-1/2 mx-auto">
        <div class="video-container">
          <%= @video.embed_code.html_safe %>
        </div>
      </div>
    </div>
    <h2 class="text-center font-bold mt-8 sm:text-2xl md:text-3xl"><%= @video.title %></h2>
  </div>
  <div>
    <% if current_user %>
      <div class="flex justify-center">
        <div class="border-b w-5/6 pl-8 mt-10 sm:text-2xl md:text-3xl">
          <%= link_to 'ホーム', home_path(@uservideo), id: 'home-link', remote: true, class: 'text-blue-500  hover:underline pr-3' %>
          <%= link_to 'メモ', memo_section_path(@uservideo), id: 'memo-link', remote: true, class: 'text-blue-500 hover:underline pr-3'  %>
          <%= link_to 'プレイリスト', playlist_section_path(@uservideo), id: 'playlist-link', remote: true, class: 'text-blue-500 hover:underline'  %>
        </div>
      </div>
      <div class="flex justify-center my-5">
        <turbo-frame id="section" class="w-full">
          <%= render 'shared/watched_status' %>
        </turbo-frame>
      </div>
    <% else %>
      <div class="flex flex-col items-center text-center justify-center">
        <div class="border-b w-5/6 pl-8 mt-4 flex justify-start sm:text-2xl md:text-3xl">
          <p class= 'text-blue-500 hover:underline pr-3'>ホーム</p>
          <p class= 'text-blue-500 hover:underline pr-3'>メモ</p>
          <p class= 'text-blue-500 hover:underline'>プレイリスト</p>
        </div>
        <h1 class="mt-10 text-3xl">ログイン後利用可能</h1>
      </div>
    <% end %>
  </div>
</div>