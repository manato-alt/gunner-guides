<div class="m-6">
  <div>
    <div class="flex justify-center items-center">
      <div>
        <%= @video.embed_code.html_safe %>
      </div>
    </div>
    <h2 class="text-center text-3xl font-bold mt-8"><%= @video.title %></h2>
  </div>
  <div>
    <% if current_user %>
      <div class="flex justify-center">
        <div class="border-b w-4/6 text-3xl pl-11 mt-4">
          <%= link_to 'ホーム', home_path(@uservideo), id: 'home-link', remote: true, class: 'text-blue-500  hover:underline pr-3' %>
          <%= link_to 'メモ', memo_section_path(@uservideo), id: 'memo-link', remote: true, class: 'text-blue-500 hover:underline'  %>
        </div>
      </div>
      <div class="flex justify-center my-5">
        <turbo-frame id="section" class="w-full">
          <%= render 'shared/watched_status' %>
        </turbo-frame>
      </div>
    <% else %>
      <div class="flex justify-center">
        <div class="border-b w-4/6 text-3xl pl-11 mt-4">
          <p class= 'text-blue-500 hover:underline'>ホーム</p>
          <p class= 'text-blue-500 hover:underline'>メモ</p>
        </div>
      </div>
      <p>ログイン後利用可能</p>
    <% end %>
  </div>
</div>